    <style>

        #cartDropdown {
            display: none;
            position: absolute;
            top: 80px;
            right: 20px;
            width: 100%;
            max-width: 400px;
            background: white;
            border: 1px solid #ddd;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            padding: 20px;
            z-index: 1000;
            border-radius: 10px;
            max-height: 600px; /* thêm chiều cao tối đa */
            overflow-y: auto; /* thêm scroll dọc */
        }

        #cartDropdown h3 {
            margin-top: 0;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        .cart-item {
            display: flex;
            gap: 10px;
            margin: 15px 0;
            padding-bottom: 10px;
            position: relative;
            border-bottom: 1px dashed gray;
        }

        .cart-item img {
            width: 60px;
            height: auto;
            border: 1px solid #eee;
        }

        .item-info {
            flex: 1;
        }

        .item-info strong {
            font-size: 14px;
        }

        .item-info small {
            color: #888;
            display: block;
            margin-top: 5px;
        }

        .item-price {
            font-weight: bold;
            white-space: nowrap;
            align-self: flex-start;
        }

        .remove-item {
            position: absolute;
            top: 0;
            right: 0;
            cursor: pointer;
            color: #999;
            font-size: 16px;
        }

        .remove-item:hover {
            color: red;
        }

        .cart-total {
            border-top: 1px solid #ddd;
            padding-top: 10px;
            margin-top: 10px;
            font-size: 16px;
            display: flex;
            justify-content: space-between;
        }

        .cart-actions {
            margin-top: 20px;
            display: flex;
        }

        .cart-actions button,
        .cart-actions a {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48%;
            margin: 1%;
            padding: 10px;
            border: none;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
            color: white;
        }

    </style>

