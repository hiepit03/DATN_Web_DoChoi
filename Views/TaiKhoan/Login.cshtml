<!-- Single Page Header start -->
<div class="trangchu container-fluid">
    <div style="height: 20px"></div>
	@model Web_DoChoi.ViewModel.DangNhapViewModel
    <div class="container">
        <section>
            <div class="container">
                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="~/media/ChatGPT Image May 1, 2025, 02_20_51 PM.png"
                                         alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        <form asp-action="Login">
                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                                <span class="h1 fw-bold mb-0">Đồ Chơi</span>
                                            </div>

                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng Nhập Vào Tài Khoản</h5>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" required />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <input asp-for="Password" type="password" class="form-control" placeholder="Mật Khẩu" required />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="pt-1 mb-4">
                                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Đăng Nhập</button>
                                            </div>

                                            <a class="small text-muted" href="@Url.Action("QuenMatKhau", "TaiKhoan")">Quên Mật Khẩu?</a>
                                            <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                                Chưa có tài khoản? <a style="color: #393f81;" asp-action="DangKy" asp-controller="TaiKhoan">Đăng Kí Ngay</a>
                                            </p>
                                            <a href="#!" class="small text-muted">Terms of use.</a>
                                            <a href="#!" class="small text-muted">Privacy policy</a>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
	</div>
</div>
<!-- Single Page Header End -->