@model Web_DoChoi.Models.TaiKhoanModel

<div class="trangchu container-fluid">
    <div style="height: 20px"></div>
    <div class="container">
        @{
            ViewData["Title"] = "Thông tin tài khoản";
        }

        <h2>Thông tin tài khoản</h2>

        <form asp-action="CapNhatTaiKhoan" method="post">
            <input type="hidden" asp-for="PK_TaiKhoan" />

            <div class="form-group">
                <label for="UserName">Tên người dùng</label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input class="form-control" value="@Model.Email" readonly />
            </div>

            <div class="form-group">
                <label>Chức vụ</label>
                <input class="form-control" value="@Model.ChucVu" readonly />
            </div>

            <button type="submit" class="btn btn-primary mt-2">Cập nhật</button>
        </form>


        <h4>Đổi mật khẩu</h4>

        <!-- Form đổi mật khẩu -->
        <form asp-action="DoiMatKhau" method="post">
            <input type="hidden" asp-for="PK_TaiKhoan" />

            <div class="form-group">
                <label for="NewPassword">Mật khẩu mới</label>
                <input type="password" name="NewPassword" class="form-control" />
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                <input type="password" name="ConfirmPassword" class="form-control" />
            </div>

            <button type="submit" class="btn btn-warning mt-2">Đổi mật khẩu</button>
        </form>

    </div>

 </div>
