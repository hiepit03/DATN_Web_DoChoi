<div class="trangchu container-fluid">
    <div style="height: 20px"></div>
    <div class="container">

        @{
            ViewData["Title"] = "Quên mật khẩu";
        }

        <h2>Quên mật khẩu</h2>

        <form asp-action="QuenMatKhau" method="post">
            <label>Nhập email đã đăng ký:</label>
            <input type="email" name="email" class="form-control" required />
            <br />
            <button type="submit" class="btn btn-primary">Gửi liên kết</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">@ViewBag.Message</div>
        }

    </div>
</div>