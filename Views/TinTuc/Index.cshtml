@model IEnumerable<Web_DoChoi.Models.TinTucModel>

<style>
    .event-card {
        max-width: 320px;
        margin: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        overflow: hidden;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        cursor: pointer;
    }

    .event-img-wrapper {
        width: 100%;
        height: 220px;
        overflow: hidden;
    }

    .event-img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .event-meta {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .event-title {
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
    }
</style>

<div class="trangchu container-fluid">
    <div style="height: 20px"></div>
    <div class="container">
        <!-- Contact Start -->
        <div class="container-fluid contact">
            <div class="container">
                <div class="p-5 bg-light rounded">
                    <div class="row g-2">

                        <div class="col-12">
                            <div class="text-center mx-auto" style="max-width: 700px;">
                                <h1 class="text-primary">Tin Tức</h1>
                            </div>
                        </div>

                        @foreach(var item in Model)
                        {
                            <a class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4" asp-action="ChiTiet" asp-controller="TinTuc" asp-route-Id="@item.PK_TinTuc">
                                <div class="event-card">
                                    <!-- Ảnh -->
                                    <div class="event-img-wrapper">
                                        <img src="~/media/tintuc/@item.HinhAnh" alt="Sự kiện">
                                    </div>

                                    <!-- Nội dung -->
                                    <div class="p-3">
                                        <div class="d-flex justify-content-between align-items-center event-meta mb-2">
                                            <div>
                                                <i class="bi bi-calendar-event"></i>@item.ThoiGian.ToString("dd/MM/yyyy")
                                            </div>
                                            <div><i class="bi bi-chat-dots"></i></div>
                                        </div>
                                        <div class="event-title">@item.TenTinTuc</div>
                                    </div>
                                </div>
                            </a>
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- Contact End -->
    </div>
</div>