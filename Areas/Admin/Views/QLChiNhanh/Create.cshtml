@model Web_DoChoi.Models.ChiNhanhModel
<h1>Thêm mới Chi Nhánh</h1>

<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <!-- Cột thứ nhất -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tên Chi Nhánh</label>
                    <input asp-for="TenChiNhanh" class="form-control" />
                    <span asp-validation-for="TenChiNhanh" class="text-danger" />
                </div>
            </div>

            <!-- Cột thứ hai -->
            <div class="col-md-6">
                <!-- Cột thứ hai -->
                <div class="form-group">
                    <label>Địa Chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Giới Thiệu</label>
            <textarea asp-for="GioiThieu" class="form-control" style="height: 400px"></textarea>
            <span asp-validation-for="GioiThieu" class="text-danger" />
        </div>

        <!-- Nút Submit -->
        <div class="form-group" style="margin: 20px">
            <button type="submit" class="btn btn-primary">Thêm mới</button>
        </div>
    </form>

    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('GioiThieu');
    </script>
}

