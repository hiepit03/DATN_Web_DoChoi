@model Web_DoChoi.Models.MaKhuyenMaiModel
<h1>Thêm mới Mã Khuyến Mãi</h1>

<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <!-- Cột thứ nhất -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tên Mã Khuyến Mãi</label>
                    <input asp-for="TenMaGiamGia" class="form-control" />
                    <span asp-validation-for="TenMaGiamGia" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Mô Tả</label>
                    <input asp-for="MoTa" class="form-control" />
                    <span asp-validation-for="MoTa" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Giá Tiền Áp Dụng</label>
                    <input asp-for="GiaTienApDung" class="form-control" />
                    <span asp-validation-for="GiaTienApDung" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Giá Tiền Giảm</label>
                    <input asp-for="GiaTienGiam" class="form-control" />
                    <span asp-validation-for="GiaTienGiam" class="text-danger" />
                </div>
            </div>

            <!-- Cột thứ hai -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Thời gian Bắt Đầu</label>
                    <input asp-for="ThoiGianBatDau" class="form-control" />
                    <span asp-validation-for="ThoiGianBatDau" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Thời gian Kết Thúc</label>
                    <input asp-for="ThoiGianKetThuc" class="form-control" />
                    <span asp-validation-for="ThoiGianKetThuc" class="text-danger" />
                </div>
            </div>

            <!-- Nút Submit -->
            <div class="form-group" style="margin: 20px">
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </div>
    </form>

    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

